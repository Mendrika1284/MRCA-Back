{% extends 'base.html.twig' %}

{% block title %}Voir compte{% endblock %}

{% block stylesheets %}
<style>
* {
    margin: 0;
    padding: 0
}


.card {
    width: 350px;
    background-color: #efefef;
    border: none;
    transition: all 0.5s;
}

.image img {
    transition: all 0.5s
}


.btn {
    height: 140px;
    width: 140px;
    border-radius: 50%
}

.name {
    font-size: 22px;
    font-weight: bold
}

.idd {
    font-size: 14px;
    font-weight: 600
}

.idd1 {
    font-size: 12px
}

.number {
    font-size: 22px;
    font-weight: bold
}

.follow {
    font-size: 12px;
    font-weight: 500;
    color: #444444
}

.btn1 {
    height: 40px;
    width: 150px;
    border: none;
    background-color: #000;
    color: #aeaeae;
    font-size: 15px
}

.text span {
    font-size: 13px;
    color: #545454;
    font-weight: 500
}

.icons i {
    font-size: 19px
}

hr .new1 {
    border: 1px solid
}

.join {
    font-size: 14px;
    color: #a0a0a0;
    font-weight: bold
}

.date {
    background-color: #ccc
}
</style>
{% endblock %}

{% block body %}
{% if(role == "client") %}
<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4">
        <div class=" image d-flex flex-column justify-content-center align-items-center">
            <button class="btn btn-secondary">
                <img src="{{client.photo}}" height="100" width="100" /></button>
            <span class="name mt-3">{{ client.civilite }}{{utilisateur.nom}} {{utilisateur.prenom}}</span>
            <span class="idd">{{utilisateur.email}}</span>
            <div class="d-flex flex-row justify-content-center align-items-center gap-2">
                <span class="idd1">{{utilisateur.contact}}</span>
                <span><i class="fa fa-copy"></i></span>
            </div>
            <div class=" d-flex mt-2">
                <a href="/modifierUtilisateur/{{utilisateur.id}}" ><button class="btn1 btn-dark">Modifier</button></a>
            </div>
            <div class=" px-2 rounded mt-4 date ">
                <span class="join">Crée le {{ utilisateur.createdAt|date("d/m/Y") }}</span>
            </div>
        </div>
    </div>
</div>
{% elseif(role == "entreprise") %}
<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4">
        <div class=" image d-flex flex-column justify-content-center align-items-center">
            <button class="btn btn-secondary">
                <img src="https://i.imgur.com/wvxPV9S.png" height="100" width="100" /></button>
            <span class="name mt-3">{{utilisateur.nom}} {{utilisateur.prenom}}</span>
            <span class="idd">{{utilisateur.email}}</span>
            <div class="d-flex flex-row justify-content-center align-items-center gap-2">
                <span class="idd1">{{utilisateur.contact}}</span>
                <span><i class="fa fa-copy"></i></span>
            </div>
            <div class=" d-flex mt-2">
                <a href="/modifierUtilisateur/{{utilisateur.id}}" ><button class="btn1 btn-dark">Modifier</button></a>
            </div>
            <div class="text mt-3">
                <span>{{ entreprise.nom_entreprise }}</span>
            </div>
            <div class="text mt-3">
                <span>{{ entreprise.siret }}</span>
            </div>
            <div class="text mt-3">
                <span>{{ entreprise.tva }}</span>
            </div>
            <div class=" px-2 rounded mt-4 date ">
                <span class="join">Crée le {{ utilisateur.createdAt|date("d/m/Y") }}</span>
            </div>
        </div>
    </div>
</div>
{% elseif(role == "artisan") %}
<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4">
        <div class=" image d-flex flex-column justify-content-center align-items-center">
            <button class="btn btn-secondary">
                <img src="{{artisan.photo_profile}}" height="100" width="100" /></button>
            <span class="name mt-3">{{artisan.civilite}} {{utilisateur.nom}} {{utilisateur.prenom}}</span>
            <span class="idd">{{utilisateur.email}}</span>
            <div class="d-flex flex-row justify-content-center align-items-center gap-2">
                <span class="idd1">{{utilisateur.contact}}</span>
                <span><i class="fa fa-copy"></i></span>
            </div>
            <div class=" d-flex mt-2">
                <a href="/modifierUtilisateur/{{utilisateur.id}}" ><button class="btn1 btn-dark">Modifier</button></a>
            </div>
            <div class="text mt-3">
                <span>Métier: {{metier.nom}}</span>
            </div>
            <div class="text mt-3">
                <span>Status juridique: {{artisan.status_juridique}}</span>
            </div>
            <div class="text mt-3">
                <span>Siret: {{metier.siret}}</span>
            </div>
            <div class="text mt-3">
                <span>TVA: {{metier.tva}}</span>
            </div>
            <div class="text mt-3">
                <span>KBIS: {{metier.kbis}}</span>
            </div>
            <div class="text mt-3">
                <span>IBAN: {{metier.iban}}</span>
            </div>
            <div class="text mt-3">
                <span>BIC: {{metier.bic}}</span>
            </div>
            <div class=" px-2 rounded mt-4 date ">
                <span class="join">Crée le {{ utilisateur.createdAt|date("d/m/Y") }}</span>
            </div>
        </div>
    </div>
</div>
{% elseif(role == "admin") %}
<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4">
        <div class=" image d-flex flex-column justify-content-center align-items-center">
            <button class="btn btn-secondary">
                <img src="{{admin.photo}}" height="100" width="100" /></button>
            <span class="name mt-3">{{ admin.civilite }}{{utilisateur.nom}} {{utilisateur.prenom}}</span>
            <span class="idd">{{utilisateur.email}}</span>
            <div class="d-flex flex-row justify-content-center align-items-center gap-2">
                <span class="idd1">{{utilisateur.contact}}</span>
                <span><i class="fa fa-copy"></i></span>
            </div>
            <div class=" d-flex mt-2">
                <a href="/modifierUtilisateur/{{utilisateur.id}}" ><button class="btn1 btn-dark">Modifier</button></a>
            </div>
            <div class=" px-2 rounded mt-4 date ">
                <span class="">Crée le {{ utilisateur.createdAt|date("d/m/Y") }}</span>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}